<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.Home"
    tools:showIn="@layout/activity_home">


    <RelativeLayout
        android:id="@+id/rel_home_noHabits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/msg_no_habits"
            android:textAlignment="center"
            android:textColor="@color/txtview_white" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_home_habitList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="10dp">


        <ListView
            android:id="@+id/lv_home_habitList"
         android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_home_motivationalQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/motivational_quote_example"
            android:textColor="@color/txtview_white" />
    </LinearLayout>


</LinearLayout>



